<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="product"
            type="com.example.reisonlinemarket.model.Product" />
    </data>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_margin="8dp"
        android:background="@drawable/most_viewed_list_row_style"
        android:orientation="horizontal"
        tools:context=".ui.generalfragments.RecentlyProductsShowerFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_title_in_most_viewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="12dp"
                android:text="@{product.name}"
                android:textColor="#050505"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/regular_price"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/regular_price_in_most_viewed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@{product.regularPrice}"
                        android:textColor="#9A0C02"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@id/sale_price"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="regular price" />

                    <TextView
                        android:id="@+id/sale_price_in_most_viewed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@{product.salePrice}"
                        android:textColor="#015004"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="sale price" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image_of_product_in_most_viewed"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toTopOf="@id/product_title"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="8dp"
                    tools:src="@tools:sample/avatars" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="product"
            type="com.example.reisonlinemarket.model.Product" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/recently_list_row_style"
        android:orientation="vertical"
        tools:context=".ui.generalfragments.RecentlyProductsShowerFragment">

        <ImageView
            android:id="@+id/image_of_product"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintBottom_toTopOf="@id/product_title"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:foregroundGravity="center_horizontal"
            android:textColor="#050505"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/regular_price"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{product.name}" />

        <TextView
            android:id="@+id/regular_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="@{product.regularPrice}"
            android:textColor="#F44336"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/sale_price"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:foregroundGravity="center_horizontal"
            android:text="@{product.salePrice}"
            android:textColor="#4CAF50"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</layout>